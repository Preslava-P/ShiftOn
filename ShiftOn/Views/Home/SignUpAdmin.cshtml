@{
    ViewData["Title"] = "Регистрация";
}
<head>
    <link rel="stylesheet" href="~/css/signup.css" asp-append-version="true" />
</head>
<div class="font2">
    <div class="limiter2">
        <div class="container-login2">
            <div class="login-form-title2 text-white">
                <h1>Регистрация</h1>
            </div>

            <form class="login-form was-validated">
                <div class="flex-register">
                    <div class="wrap-input2">
                        <h5 class="label-input2">Име и фамилия</h5>
                        <input class="input2" type="text" name="name" autocomplete="on" placeholder="Въведи име и фамилия" required>
                    </div>

                    <div class="wrap-input2">
                        <h5 class="label-input2">Потребителско име</h5>
                        <input class="input2" type="text" name="username" autocomplete="on" placeholder="Въведи потребителско име" required>
                    </div>
                </div>

                <div class="flex-register">
                    <div class="wrap-input2">
                        <h5 class="label-input2">Имейл адрес</h5>
                        <input class="input2" type="email" name="email" autocomplete="on" placeholder="Въведи имейл адрес" required>
                    </div>

                    <div class="wrap-input2">
                        <h5 class="label-input2">Парола</h5>
                        <input class="input2" type="password" name="password" placeholder="Въведи парола" required>
                    </div>
                </div>

                <div class="flex-register">
                    <div class="wrap-input2">
                        <h5 class="label-input2">Фирма</h5>
                        <input class="input2" type="text" name="firma" autocomplete="on" placeholder="Въведи име на фирмата" required>
                    </div>

                    <div class="wrap-input2">
                        <h5 class="label-input2">Служители</h5>
                        <input class="input2" type="number" name="number" placeholder="Въведи брой служители" required>
                    </div>
                </div>
            </form>
            <div class="container-login-button2">
                <button class="login-form-btn2" type="button">
                    Регистрация
                </button>
            </div>
        </div>
    </div>
</div>
