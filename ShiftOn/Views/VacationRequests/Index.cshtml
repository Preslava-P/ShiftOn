@model IEnumerable<ShiftOn.Models.VacationRequest>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RequestDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Schedule)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RequestDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Schedule.ScheduleId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VacationRequestId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VacationRequestId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VacationRequestId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
